#                                  The Main Menu
def main_menu():
    print("\n\t Welcome to the 'Employee Menu'")
    print("1. CUSTOMER FILE")
    print("2. PROPERTY FILE")
    print("3. REGISTRATION OF HOUSE")
    print("4. BILL GENERATION")
    print("5. REPORT")
    print("6. QUIT")
    num= int(input("Enter the number[1-6]:"))
    if num==1:
        Customer_file()
    if num ==2:
        Property_file()
    if num ==3:
        House_Registration()
    if num ==4:
        Bill_Generation()
    if num ==5:
        Report()
    if num ==6:
        Quit()
    else:
        print("Choose a number between '1 to 6'")
main_menu()



#                                 Customer file
def Customer_file():
    print("Welcome to the customer portal")
    print("1. Addition of a reoord")
    print("2. Modification of a reoord")
    print("3. Deletion of a reoord")
    print("4. Main Menu")
    num= int(input("Enter the number[1-4]:"))
    if  num ==2 or num ==3:
        SUB_CUSTOMER_FILE()
    if num==1:
        Customer_addition()
    else:
        main_menu()
Customer_file()

def SUB_CUSTOMER_FILE():
    num= int(input("Enter the number of details to add:"))
    for i in range(num):
        ID=input(" Customer number:")
        Name=input(" Customer name")
        Contact=input("Contact number")
        Add=input("Address")
        Date=input("Date of registration")
        Houseno=input("House No.")
        Regisnum=input(" Registration number")
SUB_CUSTOMER_FILE()

